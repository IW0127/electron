{
  "name": "HRMS",
  "version": "0.0.1-alpha.12",
  "main": "main.js",
  "authors": "test",
  "description": "test",
  "private": true,
  "scripts": {
    "start": "nodemon --watch main.js --exec electron .",
    "build": "electron-builder -w --publish always",
    "mac": "electron-builder -m",
    "publish": "set GH_TOKEN= && electron-builder -w --publish always",
    "deploy": "node scripts/release.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "child_process": "1.0.2",
    "cross-env": "7.0.3",
    "electron": "25.3.0",
    "electron-builder": "24.13.3",
    "inquirer": "8.2.6",
    "nodemon": "3.1.10",
    "semver": "^7.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IW0127/electron"
  },
  "build": {
    "appId": "com.electron.hrms",
    "productName": "HRMS",
    "generateUpdatesFilesForAllChannels": true,
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "../alpha",
      "buildResources": "assets"
    },
    "win": {
      "icon": "favicon.png"
    },
    "nsis": {
      "artifactName": "HRMS.${version}.exe",
      "uninstallDisplayName": "HRMS"
    },
    "mac": {
      "artifactName": "HRMS.${ext}",
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "icon": "favicon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "IW0127",
      "repo": "electron",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2",
    "update-electron-app": "^3.1.1"
  }
}