{
  "name": "HRMS",
  "version": "1.0.0",
  "main": "main.js",
  "authors": "test",
  "description": "test",
  "scripts": {
    "start": "nodemon --watch * --exec electron .",
    "build": "electron-builder -w",
    "mac": "electron-builder -m"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "25.3.0",
    "electron-builder": "24.4.0",
    "nodemon": "^3.1.10"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  },
  "build": {
    "appId": "com.electron.hrms",
    "productName": "HRMS",
    "files": [
      "**/*",
      "resources/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "artifactName": "HRMS.${ext}",
      "icon": "favicon.png"
    },
    "mac": {
      "artifactName": "HRMS.${ext}",
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities"
    },
    "asarUnpack": [
      "resources/preload.js",
      "resources/timer-worker.js"
    ],
    "extraResources": [
      "resources/preload.js",
      "resources/timer-worker.js"
    ]
  }
}